{
    "name": "BodyPose Refinement Base",
    "dataset": "ITOP",
    "side": "side",
    "task": "Pose Estimation",
    "project_dir": "/path/to/BodyPoseRefine",
    "train_dir": "/path/to/itop",
    "epochs": 100,
    "data": {
      "type": "base",
      "kpts_type": "3D",
      "kpts_path": "/path/to/kpts_to_load_train.pkl",
      "kpts_path_test": "/path/to/kpts_to_load_test.pkl",
      "from_gt": true,
      "batch_size": 64,
      "input_size": [15, 3],
      "output_size": [15, 3],
      "image_size": [240, 320],
      "num_keypoints": 15,
      "result_dir": "./result"
    },
    "metrics": {
      "sigmas": 0.107,
      "gt_type": "plain",
      "kpts_type": "3D",
      "dist_thresh": 100
    },
    "data_aug": {
      "mu": 0,
      "sigma": 50,
      "factor": 10
    },
    "checkpoints": {
      "best": true,
      "save_name": "train_base",
      "save_dir": "./checkpoints/vitruvian/",
      "save_iters": 30,
      "tb_path": "train_log/itop"
    },
    "solver": {
      "type": "Adam",
      "workers": 4,
      "weight_decay": 0.0001,
      "decay_steps": [50, 75],
      "base_lr": 0.001
    },
    "network":{
      "alpha": 1,
      "beta": 0,
      "gamma": 0,
      "model_name": "linear",
      "linear_size": 1024,
      "residual": true,
      "dropout" : true,
      "batch_norm": true,
      "activation": "relu"
    }
}
